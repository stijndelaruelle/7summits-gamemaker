          <argument>
            <kind>1</kind>
            <string>///Handle collision &amp; movement
var maxSlope = 10;

//Set gravity
if (place_meeting(x, y+1, par_solid) || place_meeting(x, y+1, par_solid_projectile))
{ 
    m_VertSpeed = 0;
}
else
{
    m_VertSpeed += global.Gravity * 0.6; //lower gravity just feels better
}

//Horizontal collision
var xOffset = m_Speed * m_HorizDirection * global.GameDeltaTime;
if (place_meeting(x + xOffset, y, par_solid))
{
    var yOffset = 0;
    
    //Check how steep the slope is
    while(place_meeting(x + xOffset, y - yOffset, par_solid) &amp;&amp; yOffset &lt;= maxSlope)
    {
        ++yOffset;
    }
    
    //To steep we can't climp it
    if (yOffset &gt; maxSlope)
    {
        while (!place_meeting(x + m_HorizSpeed, y, par_solid))
        {
            x += m_HorizDirection; //Move 1 pixel at a time
        }
        m_HorizDirection *= -1;
    }
    else
    {
        y -= yOffset;
    }
    
    //Slow down if we're going uphill!
    m_HorizSpeed -= m_Speed * 0.1 * global.GameDeltaTime;
    if (m_HorizSpeed &lt;= 0.0)
    {
        m_HorizDirection *= -1;
        m_HorizSpeed = 0.0;
        m_HasTurned = true;
    }
}

//Speed up again when coming from a slope
if (m_HasTurned &amp;&amp; m_HorizSpeed &lt; m_Speed)
{
     m_HorizSpeed += m_Speed * 0.05 * global.GameDeltaTime;
     if (m_HorizSpeed &gt;= m_Speed)
     {
        m_HorizSpeed = m_Speed;
        m_HasTurned = false;
     }
}

x += m_HorizSpeed * m_HorizDirection * global.GameDeltaTime;

//Vertical collision
var isOnGround = false;

//Check if we can run off a slope
if (m_WasOnGround &amp;&amp; m_VertSpeed == 0)
{
    if (place_meeting(x, y + maxSlope, par_solid) ||
        place_meeting(x, y + maxSlope, par_solid_projectile))
    {
        var yOffset = 0;
        while (!place_meeting(x, y + 1, par_solid) &amp;&amp;
                !place_meeting(x, y + 1, par_solid_projectile) &amp;&amp;
                yOffset &lt;= maxSlope)
        {
            y += 1;
            ++yOffset;
        }
        m_VertSpeed = 0;
        isOnGround = true;
    }
}

if ((place_meeting(x, y + (m_VertSpeed * global.GameDeltaTime), par_solid) ||
     place_meeting(x, y + (m_VertSpeed * global.GameDeltaTime), par_solid_projectile)) &amp;&amp;
     !isOnGround)
{
    while (!place_meeting(x, y + sign(m_VertSpeed), par_solid) &amp;&amp;
           !place_meeting(x, y + sign(m_VertSpeed), par_solid_projectile))
    {
        y += sign(m_VertSpeed);
    }

    //We touched the ground, bounce up a bit (to fake physics)
    if (!m_WasOnGround)
    {
        if (!m_HasBounced)
        {
            m_VertSpeed *= -0.25;    
            if (m_HorizSpeed == 0) { m_HorizSpeed = m_Speed; }
            m_HasBounced = true;
        }
        else
        {
            m_HasBounced = false;
        }
    }
    else
    {
        m_VertSpeed = 0;
    }
    
    isOnGround = true;
}

m_WasOnGround = isOnGround;

//Move vertically
y += m_VertSpeed * global.GameDeltaTime;
</string>
